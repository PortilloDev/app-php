{% extends "layout.twig" %}

{% block content %}
    <div class="row">
        <h1>List Jobs</h1>
        {% if responseMessage %}
            <div class="alert alert-primary" role="alert">
                    {{  responseMessage }}
            </div>
        {% endif %}
        <table class="table">
            <tr>
                <th>Job title</th>
                <th>Delete</th>
            </tr>
            {% for job in jobs %}
                <tr>
                    <td>{{job.title}}</td>
                    <td><a href="/jobs/delete?id={{job.id}}">Delete</a></td>
                </tr>
             {% endfor %}
        </table>
    </div>
{% endblock %}
